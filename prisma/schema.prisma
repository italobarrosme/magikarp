generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// User - Empresa cliente do SAAS (modelo User para Better Auth, tabela company no banco)
model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  phone         String?  @unique
  document      String? // CNPJ
  emailVerified Boolean  @default(false)
  image         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relacionamentos de autenticação
  sessions Session[]
  accounts Account[]

  // Relacionamentos de negócio
  employees        Employee[]
  campaigns        Campaign[]
  createdCampaigns Campaign[] @relation("CampaignCreator")

  @@map("company")
}

// Employee - Funcionários que serão vítimas das campanhas
model Employee {
  id        String   @id @default(uuid())
  name      String
  email     String?
  phone     String // WhatsApp para envio
  category  String // vendas | financeiro | rh | ti | operacional | etc
  companyId String
  company   User     @relation(fields: [companyId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  campaignTargets CampaignTarget[]

  @@index([companyId])
  @@index([category])
  @@map("employee")
}

// PhishingTemplate - Templates pré-prontos de golpes
model PhishingTemplate {
  id                      String   @id @default(uuid())
  name                    String
  description             String?
  type                    String // phishing | malware | social_engineering | smishing
  defaultMessage          String // Mensagem padrão do template
  defaultAwarenessContent String // Conteúdo educacional padrão
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt

  campaigns Campaign[]

  @@map("phishing_template")
}

// Campaign - Campanha de simulação
model Campaign {
  id                   String            @id @default(uuid())
  title                String
  description          String?
  fakeLink             String // Link fictício que parece ser malicioso
  fakeMessage          String // Mensagem customizada (baseada no template)
  awarenessPageContent String? // Conteúdo da página educativa (pode sobrescrever o template)
  status               String            @default("draft") // draft | active | completed | cancelled
  companyId            String
  company              User              @relation(fields: [companyId], references: [id], onDelete: Cascade)
  createdById          String // Company que criou a campanha
  createdBy            User              @relation("CampaignCreator", fields: [createdById], references: [id])
  templateId           String?
  template             PhishingTemplate? @relation(fields: [templateId], references: [id])
  createdAt            DateTime          @default(now())
  updatedAt            DateTime          @updatedAt
  startedAt            DateTime? // Quando a campanha foi ativada
  completedAt          DateTime? // Quando a campanha foi finalizada

  targets CampaignTarget[]

  @@index([companyId])
  @@index([createdById])
  @@index([status])
  @@map("campaign")
}

// CampaignTarget - Relaciona Campaign com Employee (múltiplos targets)
model CampaignTarget {
  id         String    @id @default(uuid())
  campaignId String
  campaign   Campaign  @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  employeeId String
  employee   Employee  @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  status     String    @default("pending") // pending | sent | clicked | reported | failed
  sentAt     DateTime? // Quando a mensagem foi enviada
  clickedAt  DateTime? // Quando o link foi clicado
  whatsappId String? // ID da mensagem no WhatsApp
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  events PhishingEvent[]

  @@unique([campaignId, employeeId]) // Um employee só pode ser target uma vez por campanha
  @@index([campaignId])
  @@index([employeeId])
  @@index([status])
  @@map("campaign_target")
}

// PhishingEvent - Eventos de interação (cliques, reports, etc)
model PhishingEvent {
  id               String         @id @default(uuid())
  type             String // click | report | view
  campaignTargetId String
  campaignTarget   CampaignTarget @relation(fields: [campaignTargetId], references: [id], onDelete: Cascade)
  userAgent        String? // Navegador/dispositivo
  ipAddress        String? // IP do usuário
  deviceInfo       Json? // Informações parseadas do dispositivo
  metadata         Json? // Metadados adicionais
  createdAt        DateTime       @default(now())

  @@index([campaignTargetId])
  @@index([type])
  @@index([createdAt])
  @@map("phishing_event")
}

// Session - Sessões de autenticação (relacionadas com Company)
model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String   @map("companyId")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([userId])
  @@map("session")
}

// Account - Contas de autenticação (relacionadas com Company)
model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String    @map("companyId")
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

// Verification - Tokens de verificação (email, etc)
model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}
